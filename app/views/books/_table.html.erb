<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Manufacture</th>
      <th>Release</th>
      <th>Operation</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisherName %></td>
        <td><%= book.salesDate %></td>
        <td width="230" align="center">
          <div class="btn-group">
          <%= link_to 'Show', book_path(book), :class => 'btn btn-link btn-xs' %>
          <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-link btn-xs' %>
          <%= link_to 'Delete', book_path(book), :class => 'btn btn-xs btn-danger',
                          :method => :delete, :data => { :confirm => 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
