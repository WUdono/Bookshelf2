<%= simple_form_for(@book, :url => rentals_path) do |f| %>
  <%= f.input :id %>
  <input class="btn btn-danger" type="button" id="search_button", value="検索">
  <b id="error_msg">  </b>
  <hr>
  <%= f.input :title, :readonly => true %>
  <%= f.input :author, :readonly => true %>
